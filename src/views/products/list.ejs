<section class="bg-white py-8">

    <div class="container mx-auto flex items-center flex-wrap pt-4 pb-12">

        <!-- navigation -->
        <%- include('../components/nav-filter-search') %>

        <% products.forEach(product => { %>
            <div id="product-<%= product.slug %>" class="w-full md:w-1/3 xl:w-1/4 p-6 flex flex-col">
                <a href="/products/<%= product.slug %>">
                    <% if (Array.isArray(product.images)) { %>
                        <img 
                            src="/img/uploads/<%= product.images[0] %> "
                            class="hover:grow hover:shadow-lg object-cover h-48 w-96 rounded" 
                        >
                    <% } else { %>
                        <img 
                            src="/img/uploads/<%= product.images %> "
                            class="hover:grow hover:shadow-lg object-cover h-48 w-96 rounded" 
                        >
                    <% } %>
                    <div class="pt-3 flex items-center justify-between">
                        <p class=""><%= product.name %></p>

                        <a href="/products/edit/<%= product.slug %>"
                            class="flex justify-center items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-yellow-600 bg-white hover:bg-gray-100 focus:outline-none focus:border-gray-300 focus:shadow-outline-gray active:bg-gray-100 transition ease-in-out duration-150"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                            </svg>
                        </a>

                        <button class="flex justify-center items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-red-600 bg-white hover:bg-gray-100 focus:outline-none focus:border-gray-300 focus:shadow-outline-gray active:bg-gray-100 transition ease-in-out duration-150"
                            type="button"
                            data-slug="<%= product.slug %>"
                            onclick="deleteProduct(this)"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                        </button>

                        <svg class="h-6 w-6 fill-current text-gray-500 hover:text-black" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M12,4.595c-1.104-1.006-2.512-1.558-3.996-1.558c-1.578,0-3.072,0.623-4.213,1.758c-2.353,2.363-2.352,6.059,0.002,8.412 l7.332,7.332c0.17,0.299,0.498,0.492,0.875,0.492c0.322,0,0.609-0.163,0.792-0.409l7.415-7.415 c2.354-2.354,2.354-6.049-0.002-8.416c-1.137-1.131-2.631-1.754-4.209-1.754C14.513,3.037,13.104,3.589,12,4.595z M18.791,6.205 c1.563,1.571,1.564,4.025,0.002,5.588L12,18.586l-6.793-6.793C3.645,10.23,3.646,7.776,5.205,6.209 c0.76-0.756,1.754-1.172,2.799-1.172s2.035,0.416,2.789,1.17l0.5,0.5c0.391,0.391,1.023,0.391,1.414,0l0.5-0.5 C14.719,4.698,17.281,4.702,18.791,6.205z" />
                        </svg>
                    </div>
                    <p class="pt-1 text-gray-900">
                        <%= product.currency %> 
                        <%= product.price %>
                    </p>
                </a>
            </div>
        <% }) %>
    </div>

</section>

<script src="/js/products.js"></script>